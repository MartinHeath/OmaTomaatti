<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.martin.omatomaatti.EditorViewActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Lisää henkilö ja hänen tilitiedot:"
        android:id="@+id/InfoEdit"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/PersonName"
        android:layout_marginTop="43dp"
        android:hint="Nimi"
        android:layout_below="@+id/InfoEdit"
        android:layout_alignLeft="@+id/InfoEdit"
        android:layout_alignStart="@+id/InfoEdit" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/AccountName"
        android:inputType="textPersonName"
        android:hint="Tilin nimi"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/AccountNumber"
        android:layout_alignStart="@+id/AccountNumber"
        android:layout_alignRight="@+id/AccountNumber"
        android:layout_alignEnd="@+id/AccountNumber" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/AccountNumber"
        android:hint="Tilinumero"
        android:layout_below="@+id/AccountName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save"
        android:id="@+id/SaveButton"
        android:onClick="save"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="52dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back"
        android:id="@+id/bBut"
        android:onClick="goBack"
        android:layout_alignTop="@+id/SaveButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
